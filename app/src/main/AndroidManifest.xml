<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eirik.tdt4240_project">

    <!-- GCM connects to Google Services. -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- GCM requires a Google account to use push notifications. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <!-- Permission to get device hwid. This permission is optional, if not used, the random hwid is generated -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- This permission is required for geolocation pushes, and is used to determine whether the device can access the network. -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Prevents other applications from registering and receiving the application's messages. -->
    <!--<uses-permission android:name="com.example.eirik.tdt4240_project.permission.C2D_MESSAGE"/>-->

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="PW_APPID" android:value="D5772-61ECD" />
        <meta-data android:name="PW_PROJECT_ID" android:value="A125944871606" />

        <activity android:name=".MainActivity"/>
        <activity android:name=".mainMenu.MainMenuActivity" />
        <activity android:name=".drawing.DrawingActivity" />
        <activity
            android:name=".logIn.LogInActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".guessing.GuessingActivity" />
    </application>

</manifest>
